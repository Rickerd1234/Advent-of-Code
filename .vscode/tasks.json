{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Download Today",
            "type": "shell",
            "command": "python automation.py",
            "problemMatcher": {
                "owner": "automation",
                "fileLocation": ["relative", "${workspaceFolder}"],
                "severity": "warning",
                "pattern":[
                    {
                        "regexp": "^(.+):(\\d+) (Error:) (.+)$",
                        "file": 1,
                        "location": 2,
                        "message": 3
                    }
                ]
            }
        },
        {
            "label": "Download Previous Day",
            "type": "shell",
            "command": "python automation.py",
            "args": ["${input:year}", "${input:day}"],
            "problemMatcher": {
                "owner": "automation",
                "fileLocation": ["relative", "${workspaceFolder}"],
                "severity": "warning",
                "pattern":[
                    {
                        "regexp": "^(.+):(\\d+) (Error:) (.+)$",
                        "file": 1,
                        "location": 2,
                        "message": 3
                    }
                ]
            }
        },
        {
            "label": "Redownload Day",
            "type": "shell",
            "command": "python automation.py",
            "args": ["${input:year}", "${input:day}", "-f"],
            "problemMatcher": {
                "owner": "automation",
                "fileLocation": ["relative", "${workspaceFolder}"],
                "severity": "warning",
                "pattern":[
                    {
                        "regexp": "^(.+):(\\d+) (Error:) (.+)$",
                        "file": 1,
                        "location": 2,
                        "message": 3
                    }
                ]
            }
        },
    ],
    "inputs": [
        {
            "id": "year",
            "description": "Year:",
            "type": "promptString"
        },
        {
            "id": "day",
            "description": "Day:",
            "type": "promptString"
        }
    ]
}